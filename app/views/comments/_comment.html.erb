<h2>Comment: </h2>
<hr>
<strong>
  <p> <%= comment.name %></p>
</strong>
  <p><%= comment.description %></p> <br>
  <p><%= comment.created_at %>ago</p>
<p>
  <% if user_signed_in? %>
    <%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?'} %>
  <% end %>
</p>
